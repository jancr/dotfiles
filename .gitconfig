# This is Git's per-user configuration file.
[user]
	name = Jan Christian Refsgaard
	email = jref@novonordisk.com
[core]
	excludesfile = $HOME/.config/.gitignore_global
	eol = native
	autocrlf = input
[push]
	default = matching

[includeIf "gitdir:/novo/jref/"]
	path = ~/.conf/.git
[includeIf "gitdir:/home/jref/"]
	path = ~/work/.gitconfig
[http]
	sslCAinfo = /etc/ssl/certs/ca-certificates.crt
